            <ProjectCard 
            title="Portafolio Personal"
            description="Sitio web construido con Astro, Tailwind y componentes reutilizables para mostrar mis habilidades y proyectos."
            link="https://miportafolio.dev"
              technologies={['React', 'Tailwind CSS', 'Node.js']}

            />

            <ProjectCard 
            title="To-Do App"
            description="Aplicación web full stack con autenticación JWT y gestión de tareas (CRUD) usando React y Node.js."
            link="https://gestordetareas.app"
              technologies={['React', 'Tailwind CSS', 'Node.js']}

            />

            <ProjectCard 
            title="Dashboard"
            description="Panel interactivo creado con Power BI y DAX, mostrando métricas clave de desempeño empresarial."
