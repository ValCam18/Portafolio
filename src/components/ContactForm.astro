<div class="md:w-2/3 bg-white p-4 rounded-lg shadow-md ">
<form action="https://formspree.io/f/xyzwqqkb" method="POST" class="space-y-4 p-4">
  <div class="grid grid-cols-2 gap-4">
    <div class="space-y-2">
      <label for="name" class="block text-m font-medium mb-2">Nombre</label>
      <input
        type="text"
        id="name"
        name="name" 
        placeholder="Escribe tu nombre"
        required
        class="block w-full h-10 rounded-md border border-gray-400 px-3 py-2 placeholder-gray-400 focus:outline-none focus:ring-1 focus:ring-[#7e3bdc] focus:border-[#7e3bdc]"
      />
    </div>
    <div class="space-y-2">
      <label for="email" class="block text-m font-medium mb-2">Correo electrónico</label>
      <input
        id="email"
        name="email" 
        placeholder="Escribe tu correo electrónico"
        type="email"
        required
        class="block w-full h-10 rounded-md border border-gray-400 px-3 py-2 placeholder-gray-400 focus:outline-none focus:ring-1 focus:ring-[#7e3bdc] focus:border-[#7e3bdc]"
      />
    </div>
  </div>
  <div class="space-y-2">
    <label for="subject" class="block text-m font-medium mb-2">Asunto</label>
    <input
      id="subject"
      name="subject" 
      placeholder="Escribe el asunto del mensaje"
      required
      class="block w-full h-10 rounded-md border border-gray-400 px-3 py-2 placeholder-gray-400 focus:outline-none focus:ring-1 focus:ring-[#7e3bdc] focus:border-[#7e3bdc]"
    />
  </div>
  <div class="space-y-2">
    <label for="message" class="block text-m font-medium mb-2">Mensaje</label>
    <textarea
      id="message"
      name="message" 
      required
      class="block w-full h-10 rounded-md border border-gray-400 px-3 py-2 placeholder-gray-400 focus:outline-none focus:ring-1 focus:ring-[#7e3bdc] focus:border-[#7e3bdc] min-h-[150px]"
      placeholder="Escribe tu mensaje"
    ></textarea>
  </div>
  <button class="bg-[#7126d9] text-white rounded px-4 py-2 w-full hover:scale-105 transition-transform hover:bg-[#7d3adc] font-semibold" type="submit">
    Enviar
  </button>
</form>
</div>